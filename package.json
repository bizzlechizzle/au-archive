{
  "name": "au-archive",
  "version": "0.1.0",
  "private": true,
  "description": "Desktop application for archiving abandoned locations",
  "repository": {
    "type": "git",
    "url": "https://github.com/bizzlechizzle/au-archive.git"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "better-sqlite3",
      "esbuild",
      "sharp",
      "7zip-bin",
      "@electron/rebuild"
    ]
  },
  "scripts": {
    "postinstall": "pnpm --filter core build && pnpm --filter desktop rebuild",
    "init": "bash scripts/setup.sh",
    "init:quick": "bash scripts/setup.sh --skip-optional",
    "deps": "bash scripts/check-deps.sh",
    "dev": "pnpm --filter desktop dev",
    "build": "pnpm --filter core build && pnpm --filter desktop build",
    "build:core": "pnpm --filter core build",
    "rebuild": "pnpm --filter desktop rebuild",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,svelte,json,md}\"",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist",
    "reinstall": "pnpm clean && pnpm install"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "typescript": "^5.3.3"
  }
}
